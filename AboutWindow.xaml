<Window x:Class="MGS2Trainer.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MGS2Trainer"
        mc:Ignorable="d"
        Title="About MGS2 Trainer" Height="190" Width="250" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="32"></RowDefinition>
        <RowDefinition Height="*"></RowDefinition>
      </Grid.RowDefinitions>
      <Button Grid.Row="0" x:Name="btnUpdate" Content="Download latest version" Margin="5" Click="btnUpdate_Click_1"/>
      <TextBlock Grid.Row="1" x:Name="textBlock" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center"/>
    </Grid>
</Window>
